---
interface Props {
    theme?: "dark" | "light" | "preferred_color_scheme";
}

const { theme = "preferred_color_scheme" } = Astro.props;
---

<section class="mt-12 border-t border-t-gray-300 pt-8">
    <script
        src="https://giscus.app/client.js"
        data-repo="josuemontano/josuemontano.github.io"
        data-repo-id="MDEwOlJlcG9zaXRvcnk2NDI0OTYyMg=="
        data-category="General"
        data-category-id="DIC_kwDOA9RfFs4Cuqng"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme={theme}
        data-lang="en"
        crossorigin="anonymous"
        async></script>
</section>
